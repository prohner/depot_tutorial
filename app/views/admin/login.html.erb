<div class="depot-form">
	<fieldset>
		<legend>Please log in</legend>
		
		<% form_tag do %>
			<p>
				<label for="name">Name:</label>
				<%= text_field_tag :name, params[:name] %>
			</p>

			<p>
				<label for="name">Password:</label>
				<%= text_field_tag :password, params[:password] %>
			</p>
			
			<p>
				<%= submit_tag "Login" %>
			</p>
		<% end %>
	</fieldset>
</div>
	